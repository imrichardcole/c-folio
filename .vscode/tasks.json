{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "[cmake] configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S",
                ".",
                "-B",
                "build",
                "--profiling-output=configure-trace.json",
                "--profiling-format=google-trace"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "[cmake] clean",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build",
                "--verbose",
                "--target",
                "clean"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "[cmake] build all",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build",
                "--verbose"
            ],
            "problemMatcher": ["$msCompile"],
            "dependsOn": "[cmake] configure",
            "group": {
                "kind": "build",
                "isDefault": true
            },
        }
    ]
}